class Solution(object):
    def reverse(self, x):
        """
        :type x: int
        :rtype: int
        """
        if x > 0: 
            solution =  int(str(x)[::-1])  
        else: 
            solution = -int(str(x*-1)[::-1])    
        if solution >= -2**31 and solution <= 2**31 - 1:  
            return(solution)
        else:  
            return(0)
